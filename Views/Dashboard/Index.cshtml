        // Обновление списка активностей
        function updateActivitiesList(activities) {
            const container = document.getElementById('activitiesList');
            if (!container) return;

            if (!activities || activities.length === 0) {
                container.innerHTML = `
                    <div class="activity-item">
                        <div class="activity-icon">ℹ️</div>
                        <div class="activity-content">
                            <div class="activity-text">Нет активностей</div>
                            <div class="activity-time">--:--</div>
                        </div>
                    </div>`;
                return;
            }

            container.innerHTML = activities.map(activity => `
                <div class="activity-item">
                    <div class="activity-icon">
                        ${activity.Type === 'Task' ? '✅' : activity.Type === 'Shift' ? '🕐' : 'ℹ️'}
                    </div>
                    <div class="activity-content">
                        <div class="activity-text">${activity.Description || 'Действие'}</div>
                        <div class="activity-time">${formatTime(activity.Timestamp)}</div>
                    </div>
                </div>
            `).join('');
        }

        // Обновление списка задач
        function updateTasksList(tasks) {
            const container = document.getElementById('tasksList');
            if (!container) return;

            if (!tasks || tasks.length === 0) {
                container.innerHTML = `<tr><td colspan="5">Нет задач</td></tr>`;
                return;
            }

            container.innerHTML = tasks.map(task => `
                <tr>
                    <td>${escapeHtml(task.name || 'Без названия')}</td>
                    <td>${formatDateTime(task.time_ins)}</td>
                    <td>${formatDateTime(task.time_pref_start)}</td>
                    <td>${formatDateTime(task.time_pref_finish)}</td>
                    <td>${task.duration || 0} мин</td>
                </tr>
            `).join('');
        }

        // Обновление списка ресурсов
        function updateResourcesList(resources) {
            const container = document.getElementById('resourcesList');
            if (!container) return;

            if (!resources || resources.length === 0) {
                container.innerHTML = `<tr><td colspan="4">Нет ресурсов</td></tr>`;
                return;
            }

            container.innerHTML = resources.map(resource => `
                <tr>
                    <td>${escapeHtml(resource.uid?.substring(0, 8) || '-')}</td>
                    <td>${escapeHtml(resource.name || 'Без названия')}</td>
                    <td>${formatDateTime(resource.time_ins)}</td>
                    <td>${escapeHtml(resource.company_id?.substring(0, 8) || '-')}</td>
