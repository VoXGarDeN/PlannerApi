        // Обновление данных отчета
        function updateReportData(report) {
            if (!report) return;

            if (report.TotalTasks !== undefined) {
                document.getElementById('reportTasks').textContent = report.TotalTasks;
            }
            if (report.TotalResources !== undefined) {
                document.getElementById('reportResources').textContent = report.TotalResources;
            }
            if (report.Productivity !== undefined) {
                document.getElementById('reportProductivity').textContent = report.Productivity.toFixed(1) + '%';
            }
            if (report.ResourceUtilization !== undefined) {
                document.getElementById('reportUtilization').textContent = report.ResourceUtilization.toFixed(1) + '%';
            }
