    <script>
        // Глобальные переменные
        let statsChart = null;
        let peakHoursChart = null;
        let isRefreshing = false;
        let userName = '@ViewBag.UserName' || 'Пользователь';

        // Инициализация дашборда
        document.addEventListener('DOMContentLoaded', function() {
            updateClock();
            setInterval(updateClock, 1000);
            loadDashboardData();

            // Настройка переключения вкладок
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    switchTab(tabId);
                });
            });

            // Установка текущей даты в формах
            const now = new Date();
            const tomorrow = new Date(now.getTime() + 24 * 60 * 60 * 1000);

            document.getElementById('taskStart').value = formatDateTimeLocal(now);
            document.getElementById('taskEnd').value = formatDateTimeLocal(tomorrow);
            document.getElementById('shiftStart').value = formatDateTimeLocal(now);
            document.getElementById('shiftEnd').value = formatDateTimeLocal(tomorrow);
        });

        // Обновление времени
        function updateClock() {
            const now = new Date();
            const dateOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const timeOptions = { hour: '2-digit', minute: '2-digit', second: '2-digit' };

            document.getElementById('currentDate').textContent =
                now.toLocaleDateString('ru-RU', dateOptions);
            document.getElementById('currentTime').textContent =
                now.toLocaleTimeString('ru-RU', timeOptions);
        }

        // Загрузка данных дашборда
        async function loadDashboardData() {
            try {
                isRefreshing = true;
                updateRefreshButton(true);

                // Параллельная загрузка всех данных
                await Promise.allSettled([
                    loadStats(),
                    loadAnalytics(),
                    loadRecentActivities()
                ]);

                // Убираем состояние загрузки
                document.querySelectorAll('.loading').forEach(el => {
                    el.classList.remove('loading');
                });

            } catch (error) {
                console.error('Error loading dashboard data:', error);
                showNotification('Ошибка загрузки данных: ' + error.message, 'error');
            } finally {
                isRefreshing = false;
                updateRefreshButton(false);
            }
        }

        // Загрузка статистики
        async function loadStats() {
            try {
                const response = await fetch('/Dashboard/GetStats');
                if (response.status === 401) {
                    window.location.href = '/Account/Login';
                    return;
                }
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const stats = await response.json();

                // Обновляем UI
                animateNumber('totalTasks', stats.totalTasks || 0);
                animateNumber('activeTasks', stats.activeTasks || 0);
                animateNumber('totalResources', stats.totalResources || 0);
                document.getElementById('productivityScore').textContent =
                    (stats.productivityScore?.toFixed(1) || '0') + '%';

                document.getElementById('tasksThisWeek').textContent =
                    `↑ ${stats.tasksThisWeek || 0} на этой неделе`;
                document.getElementById('activeResources').textContent =
                    `${stats.activeResources || 0} активны`;
                document.getElementById('resourcesUtilization').textContent =
                    `↑ ${stats.resourcesUtilization?.toFixed(1) || '0'}% утилизация`;
                document.getElementById('welcomeText').textContent =
                    `Добро пожаловать, ${userName}! Вот что происходит.`;

            } catch (error) {
                console.error('Error loading stats:', error);
                showNotification('Ошибка загрузки статистики', 'error');
            }
        }

        // Загрузка аналитики
        async function loadAnalytics() {
            try {
                const response = await fetch('/Dashboard/GetAnalytics');
                if (response.status === 401) {
                    window.location.href = '/Account/Login';
                    return;
                }
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const analytics = await response.json();

                // Обновляем статусы задач
                if (analytics.taskStatusDistribution) {
                    animateNumber('statusNotStarted', analytics.taskStatusDistribution["Not Started"] || 0);
                    animateNumber('statusInProgress', analytics.taskStatusDistribution["In Progress"] || 0);
                    animateNumber('statusCompleted', analytics.taskStatusDistribution["Completed"] || 0);
                    animateNumber('statusOverdue', analytics.taskStatusDistribution["Overdue"] || 0);
                }

                // Обновляем графики
                updateDailyTasksChart(analytics.dailyTasks);
                updatePeakHoursChart(analytics.peakHours);

            } catch (error) {
                console.error('Error loading analytics:', error);
            }
        }

        // Загрузка последних активностей
        async function loadRecentActivities() {
            try {
                const response = await fetch('/Dashboard/GetRecentActivities');
                if (response.status === 401) {
                    window.location.href = '/Account/Login';
                    return;
                }
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const activities = await response.json();
                updateActivitiesList(activities);

            } catch (error) {
                console.error('Error loading activities:', error);
            }
