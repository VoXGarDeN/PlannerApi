@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Planner Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://jqwidgets.com/public/jqwidgets/styles/jqx.base.css">
    <script src="https://jqwidgets.com/public/jqwidgets/jqx-all.js"></script>
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --secondary: #8b5cf6;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --info: #3b82f6;
            --dark: #1f2937;
            --light: #f9fafb;
            --gray: #9ca3af;
            --gray-light: #e5e7eb;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --radius: 12px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 25px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: var(--radius);
            box-shadow: var(--shadow-lg);
            backdrop-filter: blur(10px);
        }

        .header-left h1 {
            font-size: 32px;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 5px;
        }

        .header-left p {
            color: var(--gray);
            font-size: 16px;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .date-time {
            text-align: right;
        }

        #currentDate {
            display: block;
            font-size: 16px;
            color: var(--dark);
            font-weight: 600;
        }

        #currentTime {
            display: block;
            font-size: 28px;
            font-weight: 700;
            color: var(--primary);
            font-family: 'Courier New', monospace;
        }

        .btn-refresh {
            padding: 12px 24px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: var(--transition);
            font-size: 16px;
        }

            .btn-refresh:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: var(--shadow-lg);
            }

        .quick-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: var(--radius);
            padding: 25px;
            display: flex;
            align-items: center;
            gap: 20px;
            box-shadow: var(--shadow);
            transition: var(--transition);
            cursor: pointer;
            border-left: 4px solid var(--primary);
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
            }

        .stat-icon {
            font-size: 36px;
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            color: white;
        }

        .stat-total-tasks .stat-icon {
            background: linear-gradient(135deg, #10b981, #34d399);
        }

        .stat-active-tasks .stat-icon {
            background: linear-gradient(135deg, #f59e0b, #fbbf24);
        }

        .stat-resources .stat-icon {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
        }

        .stat-productivity .stat-icon {
            background: linear-gradient(135deg, #8b5cf6, #a78bfa);
        }

        .stat-content {
            flex: 1;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 800;
            color: var(--dark);
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 16px;
            color: var(--gray);
            margin-bottom: 10px;
        }

        .stat-trend {
            font-size: 14px;
            font-weight: 600;
        }

        .trend-up {
            color: var(--success);
        }

        .trend-down {
            color: var(--danger);
        }

        .trend-neutral {
            color: var(--gray);
        }

        .main-tabs {
            background: white;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow-lg);
            margin-bottom: 30px;
        }

        .tabs-header {
            display: flex;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 0;
            overflow-x: auto;
        }

        .tab-btn {
            padding: 18px 28px;
            background: transparent;
            border: none;
            color: rgba(255, 255, 255, 0.8);
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: var(--transition);
            position: relative;
            font-size: 16px;
            white-space: nowrap;
        }

            .tab-btn:hover {
                color: white;
                background: rgba(255, 255, 255, 0.1);
            }

            .tab-btn.active {
                color: white;
                background: rgba(255, 255, 255, 0.2);
            }

                .tab-btn.active::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    height: 3px;
                    background: white;
                }

        .tabs-content {
            padding: 30px;
        }

        .tab-pane {
            display: none;
        }

            .tab-pane.active {
                display: block;
            }

        .overview-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            grid-template-rows: auto auto;
            gap: 25px;
        }

        .overview-card {
            background: var(--light);
            border-radius: var(--radius);
            padding: 25px;
            border: 1px solid var(--gray-light);
        }

        .card-title {
            font-size: 20px;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .status-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .status-item {
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            transition: var(--transition);
        }

            .status-item:hover {
                transform: scale(1.05);
            }

        .status-not-started {
            background: linear-gradient(135deg, #e5e7eb, #d1d5db);
            color: var(--dark);
        }

        .status-in-progress {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
        }

        .status-completed {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
        }

        .status-overdue {
            background: linear-gradient(135deg, #fee2e2, #fca5a5);
            color: #991b1b;
        }

        .status-count {
            font-size: 28px;
            font-weight: 800;
            margin-bottom: 5px;
        }

        .status-label {
            font-size: 14px;
            font-weight: 600;
            opacity: 0.9;
        }

        .activities-list {
            max-height: 300px;
            overflow-y: auto;
        }

        .activity-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            border-bottom: 1px solid var(--gray-light);
            transition: var(--transition);
        }

            .activity-item:hover {
                background: rgba(99, 102, 241, 0.05);
                border-radius: 8px;
            }

        .activity-icon {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            border-radius: 8px;
            box-shadow: var(--shadow);
            font-size: 20px;
        }

        .quick-actions {
            background: white;
            border-radius: var(--radius);
            padding: 25px;
            box-shadow: var(--shadow-lg);
        }

        .actions-title {
            font-size: 20px;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
        }

        .action-btn {
            padding: 25px;
            background: var(--light);
            border: 2px dashed var(--gray-light);
            border-radius: var(--radius);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
            cursor: pointer;
            transition: var(--transition);
            position: relative;
        }

            .action-btn:hover {
                background: white;
                border-color: var(--primary);
                transform: translateY(-3px);
                box-shadow: var(--shadow-lg);
            }

        .action-icon {
            font-size: 40px;
            color: var(--primary);
        }

        .action-text {
            font-size: 16px;
            font-weight: 600;
            color: var(--dark);
        }

        .notification-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: var(--danger);
            color: white;
            font-size: 14px;
            font-weight: 700;
            width: 25px;
            height: 25px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Анимации */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideInUp {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        @@keyframes rotate {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .dashboard-container {
            animation: fadeIn 0.5s ease;
        }

        .loading {
            animation: pulse 1.5s infinite;
        }

        .slide-in {
            animation: slideInUp 0.5s ease forwards;
        }

        .refreshing .btn-refresh {
            animation: rotate 1s linear infinite;
        }

        /* Анимация чисел */
        .counting {
            transition: all 0.3s ease;
        }

        @@media (max-width: 768px) {
            .overview-grid {
                grid-template-columns: 1fr;
                grid-template-rows: auto;
            }

            .tabs-header {
                flex-direction: column;
            }

            .tab-btn {
                width: 100%;
                justify-content: center;
            }

            .header-left h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <!-- ТЕЛО HTML ОСТАЕТСЯ ТАКИМ ЖЕ КАК В ПРЕДЫДУЩЕЙ ВЕРСИИ -->
    <!-- Я оставляю его без изменений для краткости, вы уже знаете его структуру -->

    <div class="dashboard-container">
        <!-- Header -->
        <div class="dashboard-header">
            <div class="header-left">
                <h1>📊 Planner Dashboard</h1>
                <p id="welcomeText">Загрузка...</p>
            </div>
            <div class="header-right">
                <div class="date-time">
                    <span id="currentDate"></span>
                    <span id="currentTime"></span>
                </div>
                <button class="btn-refresh" onclick="refreshDashboard()">
                    <span id="refreshIcon">🔄</span>
                    <span id="refreshText">Обновить</span>
                </button>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="quick-stats" id="quickStats">
            <div class="stat-card stat-total-tasks loading" data-animation="pulse" onclick="switchTab('overview')">
                <div class="stat-icon">📋</div>
                <div class="stat-content">
                    <div class="stat-value" id="totalTasks">0</div>
                    <div class="stat-label">Всего задач</div>
                    <div class="stat-trend">
                        <span class="trend-up" id="tasksThisWeek">Загрузка...</span>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-active-tasks loading" data-animation="slide" onclick="switchTab('schedule')">
                <div class="stat-icon">⚡</div>
                <div class="stat-content">
                    <div class="stat-value" id="activeTasks">0</div>
                    <div class="stat-label">Активных задач</div>
                    <div class="stat-trend">
                        <span class="trend-neutral">Загрузка...</span>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-resources loading" data-animation="slide" onclick="switchTab('resources')">
                <div class="stat-icon">👥</div>
                <div class="stat-content">
                    <div class="stat-value" id="totalResources">0</div>
                    <div class="stat-label">Ресурсов</div>
                    <div class="stat-trend">
                        <span class="trend-up" id="activeResources">Загрузка...</span>
                    </div>
                </div>
            </div>

            <div class="stat-card stat-productivity loading" data-animation="pulse" onclick="switchTab('analytics')">
                <div class="stat-icon">📈</div>
                <div class="stat-content">
                    <div class="stat-value" id="productivityScore">0%</div>
                    <div class="stat-label">Продуктивность</div>
                    <div class="stat-trend">
                        <span class="trend-up" id="resourcesUtilization">Загрузка...</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Tabs -->
        <div class="main-tabs">
            <div class="tabs-header">
                <button class="tab-btn active" data-tab="overview">
                    <span>🏠</span> Обзор
                </button>
                <button class="tab-btn" data-tab="analytics">
                    <span>📈</span> Аналитика
                </button>
                <button class="tab-btn" data-tab="tasks">
                    <span>✅</span> Задачи
                </button>
                <button class="tab-btn" data-tab="resources">
                    <span>👥</span> Ресурсы
                </button>
                <button class="tab-btn" data-tab="schedule">
                    <span>📅</span> Расписание
                </button>
                <button class="tab-btn" data-tab="reports">
                    <span>📊</span> Отчеты
                </button>
            </div>

            <div class="tabs-content">
                <!-- Overview Tab -->
                <div class="tab-pane active" id="overview">
                    <div class="overview-grid">
                        <div class="overview-card overview-status">
                            <h3 class="card-title">📋 Статус задач</h3>
                            <div class="status-grid" id="statusGrid">
                                <div class="status-item status-not-started loading">
                                    <div class="status-count" id="statusNotStarted">0</div>
                                    <div class="status-label">Не начато</div>
                                </div>
                                <div class="status-item status-in-progress loading">
                                    <div class="status-count" id="statusInProgress">0</div>
                                    <div class="status-label">В процессе</div>
                                </div>
                                <div class="status-item status-completed loading">
                                    <div class="status-count" id="statusCompleted">0</div>
                                    <div class="status-label">Завершено</div>
                                </div>
                                <div class="status-item status-overdue loading">
                                    <div class="status-count" id="statusOverdue">0</div>
                                    <div class="status-label">Просрочено</div>
                                </div>
                            </div>
                        </div>

                        <div class="overview-card overview-activities">
                            <h3 class="card-title">🕐 Последние действия</h3>
                            <div class="activities-list" id="activitiesList">
                                <div class="activity-item loading">
                                    <div class="activity-icon">🕐</div>
                                    <div class="activity-content">
                                        <div class="activity-text">Загрузка данных...</div>
                                        <div class="activity-time">--:--</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Analytics Tab -->
                <div class="tab-pane" id="analytics">
                    <div class="analytics-grid">
                        <div class="overview-card">
                            <h3 class="card-title">📊 Статистика по дням</h3>
                            <div id="dailyTasksChartContainer">
                                <canvas id="dailyTasksChart" style="height: 200px;"></canvas>
                            </div>
                        </div>

                        <div class="overview-card">
                            <h3 class="card-title">👥 Производительность ресурсов</h3>
                            <div class="performance-list" id="performanceList">
                                <div class="loading" style="padding: 20px; text-align: center;">
                                    Загрузка данных...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tasks Tab -->
                <div class="tab-pane" id="tasks">
                    <div id="taskGridContainer">
                        <div id="taskGrid" style="height: 500px;"></div>
                    </div>
                </div>

                <!-- Resources Tab -->
                <div class="tab-pane" id="resources">
                    <div id="resourceGridContainer">
                        <div id="resourceGrid" style="height: 500px;"></div>
                    </div>
                </div>

                <!-- Schedule Tab -->
                <div class="tab-pane" id="schedule">
                    <div id="scheduleGridContainer">
                        <div id="shiftTaskGrid" style="height: 500px;"></div>
                    </div>
                </div>

                <!-- Reports Tab -->
                <div class="tab-pane" id="reports">
                    <div class="reports-grid">
                        <div class="overview-card">
                            <h3 class="card-title">📋 Отчет по производительности</h3>
                            <div class="report-content">
                                <div class="report-metric">
                                    <span class="metric-label">Процент выполнения:</span>
                                    <span class="metric-value" id="completionRate">0%</span>
                                </div>
                                <div class="report-metric">
                                    <span class="metric-label">Утилизация ресурсов:</span>
                                    <span class="metric-value" id="utilizationRate">0%</span>
                                </div>
                                <button class="btn-generate-report" onclick="generateReport()">
                                    Создать PDF отчет
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <h3 class="actions-title">⚡ Быстрые действия</h3>
            <div class="actions-grid">
                <button class="action-btn btn-create-task" onclick="createNewTask()">
                    <div class="action-icon">➕</div>
                    <span class="action-text">Создать задачу</span>
                </button>
                <button class="action-btn btn-schedule-shift" onclick="scheduleShift()">
                    <div class="action-icon">🕐</div>
                    <span class="action-text">Запланировать смену</span>
                </button>
                <button class="action-btn btn-generate-report" onclick="generateReport()">
                    <div class="action-icon">📊</div>
                    <span class="action-text">Создать отчет</span>
                </button>
                <button class="action-btn btn-notifications" onclick="showNotifications()">
                    <div class="action-icon">🔔</div>
                    <span class="action-text">Уведомления</span>
                    <span class="notification-badge" id="notificationCount">0</span>
                </button>
            </div>
        </div>
    </div>

    <script>
        // Глобальные переменные
        let statsChart = null;
        let performanceChart = null;
        let userName = '@User?.Identity?.Name' || 'Пользователь';
        let isRefreshing = false;

        // Инициализация дашборда
        function initializeDashboard() {
            updateClock();
            setInterval(updateClock, 1000);
            initializeTabSwitching();
            loadDashboardData();

            // Автообновление каждые 30 секунд
            setInterval(() => {
                if (!isRefreshing) {
                    loadDashboardData();
                }
            }, 30000);
        }

        // Загрузка всех данных дашборда
        async function loadDashboardData() {
            try {
                isRefreshing = true;
                updateRefreshButton(true);

                // Загружаем статистику
                await loadStats();

                // Загружаем аналитику
                await loadAnalytics();

                // Загружаем активности
                await loadRecentActivities();

                // Убираем состояние загрузки
                document.querySelectorAll('.loading').forEach(el => {
                    el.classList.remove('loading');
                    el.classList.add('slide-in');
                });

            } catch (error) {
                console.error('Error loading dashboard data:', error);
                showNotification('Ошибка загрузки данных', 'error');
            } finally {
                isRefreshing = false;
                updateRefreshButton(false);
            }
        }

        // Загрузка статистики
        async function loadStats() {
            try {
                const response = await fetch('/Dashboard/GetStats');
                if (!response.ok) throw new Error('Network response was not ok');

                const stats = await response.json();

                // Анимируем обновление чисел
                animateNumber('totalTasks', stats.totalTasks);
                animateNumber('activeTasks', stats.activeTasks);
                animateNumber('totalResources', stats.totalResources);

                // Обновляем текстовые поля
                document.getElementById('productivityScore').textContent =
                    stats.productivityScore?.toFixed(1) + '%' || '0%';

                document.getElementById('tasksThisWeek').textContent =
                    `↑ ${stats.tasksThisWeek || 0} на этой неделе`;

                document.getElementById('activeResources').textContent =
                    `${stats.activeResources || 0} активны`;

                document.getElementById('resourcesUtilization').textContent =
                    `↑ ${stats.resourcesUtilization?.toFixed(1) || '0'}% утилизация`;

                document.getElementById('welcomeText').textContent =
                    `Добро пожаловать, ${userName}! Вот что происходит.`;

            } catch (error) {
                console.error('Error loading stats:', error);
                throw error;
            }
        }

        // Загрузка аналитики
        async function loadAnalytics() {
            try {
                const response = await fetch('/Dashboard/GetAnalytics');
                if (!response.ok) throw new Error('Network response was not ok');

                const analytics = await response.json();

                // Обновляем статусы задач
                if (analytics.taskStatusDistribution) {
                    animateNumber('statusNotStarted', analytics.taskStatusDistribution["Not Started"] || 0);
                    animateNumber('statusInProgress', analytics.taskStatusDistribution["In Progress"] || 0);
                    animateNumber('statusCompleted', analytics.taskStatusDistribution["Completed"] || 0);
                    animateNumber('statusOverdue', analytics.taskStatusDistribution["Overdue"] || 0);
                }

                // Обновляем график
                updateDailyTasksChart(analytics.dailyTasks);

                // Обновляем производительность ресурсов
                updateResourcePerformance(analytics.resourcePerformance);

                // Обновляем отчеты
                document.getElementById('completionRate').textContent =
                    analytics.taskCompletionRate?.toFixed(1) + '%' || '0%';
                document.getElementById('utilizationRate').textContent =
                    analytics.resourcesUtilization?.toFixed(1) + '%' || '0%';

            } catch (error) {
                console.error('Error loading analytics:', error);
                throw error;
            }
        }

        // Загрузка последних активностей
        async function loadRecentActivities() {
            try {
                const response = await fetch('/Dashboard/GetRecentActivities');
                if (!response.ok) throw new Error('Network response was not ok');

                const activities = await response.json();
                updateActivitiesList(activities);

            } catch (error) {
                console.error('Error loading activities:', error);
                throw error;
            }
        }

        // Обновление списка активностей
        function updateActivitiesList(activities) {
            const container = document.getElementById('activitiesList');
            if (!container) return;

            if (!activities || activities.length === 0) {
                container.innerHTML = `
                    <div class="activity-item">
                        <div class="activity-icon">ℹ️</div>
                        <div class="activity-content">
                            <div class="activity-text">Нет активностей</div>
                            <div class="activity-time">--:--</div>
                        </div>
                    </div>`;
                return;
            }

            container.innerHTML = activities.map(activity => `
                <div class="activity-item slide-in">
                    <div class="activity-icon">
                        ${activity.Type === 'Task' ? '✅' : '🕐'}
                    </div>
                    <div class="activity-content">
                        <div class="activity-text">${activity.Description || 'Действие'}</div>
                        <div class="activity-time">${formatTime(activity.Timestamp)}</div>
                    </div>
                </div>
            `).join('');
        }

        // Обновление графика по дням
        function updateDailyTasksChart(dailyTasks) {
            const ctx = document.getElementById('dailyTasksChart');
            if (!ctx) return;

            // Уничтожаем старый график если есть
            if (statsChart) {
                statsChart.destroy();
            }

            if (!dailyTasks) return;

            const dates = Object.keys(dailyTasks);
            const counts = dates.map(date => dailyTasks[date]?.Count || 0);
            const completed = dates.map(date => dailyTasks[date]?.Completed || 0);

            statsChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [
                        {
                            label: 'Всего задач',
                            data: counts,
                            borderColor: 'rgb(99, 102, 241)',
                            backgroundColor: 'rgba(99, 102, 241, 0.1)',
                            tension: 0.4
                        },
                        {
                            label: 'Завершено',
                            data: completed,
                            borderColor: 'rgb(16, 185, 129)',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    animation: {
                        duration: 1000,
                        easing: 'easeOutQuart'
                    }
                }
            });
        }

        // Обновление производительности ресурсов
        function updateResourcePerformance(performance) {
            const container = document.getElementById('performanceList');
            if (!container) return;

            if (!performance || Object.keys(performance).length === 0) {
                container.innerHTML = `
                    <div class="text-center p-4 text-gray-500">
                        Нет данных о производительности
                    </div>`;
                return;
            }

            container.innerHTML = Object.entries(performance).map(([resource, value]) => `
                <div class="performance-item slide-in">
                    <div class="resource-name">${resource}</div>
                    <div class="performance-bar">
                        <div class="bar-fill" style="width: ${value}%"></div>
                        <span class="performance-value">${value.toFixed(1)}%</span>
                    </div>
                </div>
            `).join('');
        }

        // Анимация чисел
        function animateNumber(elementId, targetValue) {
            const element = document.getElementById(elementId);
            if (!element) return;

            const current = parseFloat(element.textContent) || 0;
            const duration = 1000;
            const startTime = Date.now();

            function update() {
                const elapsed = Date.now() - startTime;
                const progress = Math.min(elapsed / duration, 1);

                // Кубическая анимация
                const easeProgress = 1 - Math.pow(1 - progress, 3);
                const currentValue = Math.floor(current + (targetValue - current) * easeProgress);

                element.textContent = currentValue;

                if (progress < 1) {
                    requestAnimationFrame(update);
                }
            }

            update();
        }

        // Обновление времени
        function updateClock() {
            const now = new Date();
            const dateOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const timeOptions = { hour: '2-digit', minute: '2-digit', second: '2-digit' };

            document.getElementById('currentDate').textContent =
                now.toLocaleDateString('ru-RU', dateOptions);
            document.getElementById('currentTime').textContent =
                now.toLocaleTimeString('ru-RU', timeOptions);
        }

        // Форматирование времени
        function formatTime(timestamp) {
            if (!timestamp) return '--:--';
            const date = new Date(timestamp);
            return date.toLocaleTimeString('ru-RU', { hour: '2-digit', minute: '2-digit' });
        }

        // Обновление кнопки обновления
        function updateRefreshButton(isLoading) {
            const icon = document.getElementById('refreshIcon');
            const text = document.getElementById('refreshText');

            if (isLoading) {
                icon.textContent = '⏳';
                text.textContent = 'Обновление...';
                document.querySelector('.dashboard-container').classList.add('refreshing');
            } else {
                icon.textContent = '🔄';
                text.textContent = 'Обновить';
                document.querySelector('.dashboard-container').classList.remove('refreshing');
            }
        }

