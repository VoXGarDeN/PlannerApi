        // Обновление списка расписания
        function updateScheduleList(shifts) {
            const container = document.getElementById('scheduleList');
            if (!container) return;

            if (!shifts || shifts.length === 0) {
                container.innerHTML = `<tr><td colspan="5">Нет смен</td></tr>`;
                return;
            }

            container.innerHTML = shifts.map(shift => `
                <tr>
                    <td>${escapeHtml(shift.name || 'Без названия')}</td>
                    <td>${escapeHtml(shift.resource_id?.substring(0, 8) || '-')}</td>
                    <td>${formatDateTime(shift.time_start)}</td>
                    <td>${formatDateTime(shift.time_finish)}</td>
                    <td>${formatDateTime(shift.time_ins)}</td>
                </tr>
            `).join('');
